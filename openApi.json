    "/linkShorter": {
      "post": {
        "summary": "",
        "description": "Create short link from orginal url",
        "operationId": "post-linkShorter",
        "parameters": [
          {
            "name": "accessToken",
            "in": "header",
            "description": "Access token that you get when authentication is completed",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "originalUrl": {
                    "type": "string"
                  },
                  "expiration": {
                    "type": "string",
                    "description": "Select how long link will remain active. Possible options are: 'onclick' - will be deactivated after first click, '1','3','7' - number of days it will we active"
                  }
                },
                "required": [
                  "originalUrl",
                  "expiration"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "shortLink": {
                      "type": "string"
                    },
                    "dbItem": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "email": {
                          "type": "string"
                        },
                        "expirationTime": {
                          "type": "string"
                        },
                        "originalUrl": {
                          "type": "string"
                        },
                        "clicked": {
                          "type": "number"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "servers": [
          {
            "url": "https://duoosrfwzl.execute-api.us-east-1.amazonaws.com",
            "description": ""
          }
        ]
      }
    },
