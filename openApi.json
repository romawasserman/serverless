    "/getAllLinks": {
      "get": {
        "summary": "Your GET endpoint",
        "description": "Get all shortLinks info created by particular user",
        "operationId": "get-getAllLinks",
        "parameters": [
          {
            "name": "accessToken",
            "in": "header",
            "description": "Auth token",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "expirationTime": {
                        "oneOf": [
                          {
                            "type": "integer"
                          },
                          {
                            "type": "string"
                          }
                        ]
                      },
                      "originalUrl": {
                        "type": "string"
                      },
                      "id": {
                        "type": "string"
                      },
                      "email": {
