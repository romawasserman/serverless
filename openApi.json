      "post": {
        "summary": "",
        "description": "delete link by id ",
        "operationId": "post-delete-id",
        "parameters": [
          {
            "name": "accessToken",
            "in": "header",
            "description": "AccessToken you get on auth",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "id",
            "in": "path",
